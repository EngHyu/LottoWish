<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@id/error"
        android:drawable="@drawable/ic_error"
        android:state_enabled="false" />

    <item
        android:id="@+id/qr"
        android:drawable="@drawable/ic_input_method_qr" />

    <transition
        android:drawable="@drawable/ic_input_method_error_to_qr"
        android:fromId="@id/error"
        android:toId="@id/qr" />

    <transition
        android:drawable="@drawable/ic_input_method_qr_to_error"
        android:fromId="@id/qr"
        android:toId="@id/error" />
</animated-selector>